<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FAFAFA">

    <!-- Tombol Back -->
    <ImageView
        android:id="@+id/btnBackQris"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_chevron_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Judul -->
    <TextView
        android:id="@+id/tvTitleQris"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QRIS Payment"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#5A3A1E"
        app:layout_constraintTop_toBottomOf="@id/btnBackQris"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp" />

    <!-- QR Code -->
    <ImageView
        android:id="@+id/imgQris"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:src="@drawable/sample_qris"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitleQris"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Text Scan -->
    <TextView
        android:id="@+id/tvScan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan menggunakan :"
        android:textSize="14sp"
        android:textColor="#444"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/imgQris"
        app:layout_constraintStart_toStartOf="parent"
        />

    <!-- List Payment -->
    <LinearLayout
        android:id="@+id/listPayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvScan"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="●   Dana"
            android:textSize="14sp"
            android:textColor="#333"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="●   Gopay"
            android:textSize="14sp"
            android:textColor="#333"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="●   OVO"
            android:textSize="14sp"
            android:textColor="#333"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="●   ShopeePay"
            android:textSize="14sp"
            android:textColor="#333"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="●   Mobile Banking"
            android:textSize="14sp"
            android:textColor="#333"/>
    </LinearLayout>

    <!-- Total Label -->
    <TextView
        android:id="@+id/txtTotalLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="16sp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/listPayment"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Total Harga -->
    <TextView
        android:id="@+id/txtTotalHarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$7.60"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#000"
        app:layout_constraintTop_toTopOf="@id/txtTotalLabel"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
