<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_graph"
    app:startDestination="@id/getStartedFragment">

    <!-- Get Started -->
    <fragment
        android:id="@+id/getStartedFragment"
        android:name="com.example.brewalacoffe.login.GetStartedFragment"
        android:label="Get Started"
        tools:layout="@layout/activity_get_started">

        <action
            android:id="@+id/action_getStarted_to_login"
            app:destination="@id/loginFragment" />
    </fragment>

    <!-- Login -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.brewalacoffe.login.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_login_to_register"
            app:destination="@id/registrasiFragment" />

        <action
            android:id="@+id/action_login_to_homeGraph"
            app:destination="@id/home_graph" />
    </fragment>

    <!-- Register -->
    <fragment
        android:id="@+id/registrasiFragment"
        android:name="com.example.brewalacoffe.login.RegistrasiFragment"
        android:label="Register"
        tools:layout="@layout/fragment_registrasi">

        <action
            android:id="@+id/action_register_to_login"
            app:destination="@id/loginFragment" />
    </fragment>

</navigation>
