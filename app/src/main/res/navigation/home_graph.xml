<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.brewalacoffe.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_home_to_detailProduk"
            app:destination="@id/detailProdukFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailProdukFragment"
        android:name="com.example.brewalacoffe.home.DetailProdukFragment"
        android:label="Detail Produk"
        tools:layout="@layout/fragment_detail_produk">

        <action
            android:id="@+id/action_detailProduk_to_orderGraph"
            app:destination="@id/nav_order" />
    </fragment>

</navigation>
